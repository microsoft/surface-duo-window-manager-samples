<androidx.slidingpanelayout.widget.SlidingPaneLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sliding_pane_layout">

    <!-- first child -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/code_fragment_container"
        android:name="com.microsoft.device.display.samples.sourceeditor.CodeFragment"
        android:layout_width="400dp"
        android:layout_height="match_parent"/>

    <!-- second child -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/preview_fragment_container"
        android:name="com.microsoft.device.display.samples.sourceeditor.PreviewFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</androidx.slidingpanelayout.widget.SlidingPaneLayout>